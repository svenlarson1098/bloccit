<h1> New Ad</h1>
<p>Have them 'Click' and you get paid!</p>
<p>Find me in app/views/advertisements/new.html.erb</p>

<div class="row">
  <%= form_for @advertisement do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: "Enter Ad Title" %>
    </div>
    
  <div class="form-group">
      <%= f.label :body %> 
      <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter Ad Information" %>
  </div>
  
  <div class="form-group">
      <%= f.label :price %>
      <%= f.number_field :price, class: 'form-control', placeholder: 99 %>
  </div>
   
  <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
  <% end %>
 </div> 
</div>
